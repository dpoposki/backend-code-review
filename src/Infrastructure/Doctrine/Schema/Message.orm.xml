<?xml version="1.0" encoding="UTF-8"?>
<doctrine-mapping xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                  xmlns="http://doctrine-project.org/schemas/orm/doctrine-mapping"
                  xsi:schemaLocation="http://doctrine-project.org/schemas/orm/doctrine-mapping
                          https://www.doctrine-project.org/schemas/orm/doctrine-mapping.xsd">

    <entity name="App\Domain\Entity\Message" repository-class="App\Infrastructure\Doctrine\Repository\MessageRepository">
        <lifecycle-callbacks>
            <lifecycle-callback type="prePersist" method="onPrePersist"/>
        </lifecycle-callbacks>

        <id name="id" type="integer">
            <generator/>
        </id>

        <field name="uuid" type="guid" />
        <field name="text" length="255" />
        <field name="status" length="255" nullable="true" />
        <field name="createdAt" type="datetime_immutable" />
    </entity>

</doctrine-mapping>
